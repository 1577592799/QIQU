
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#">首页</a></li>
                    <li class="active"><span>反馈列表</span></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                        <h2 style="font-weight:900;" class="pull-left">反馈筛选</h2>
                    </header>
                    <div class="main-box-body clearfix">
                        <table>
                            <tr style="height:55px;">
                                <th style="width:200px;">状态：</th>
                                <td>
                                    <select style="width:200px;" name="sel_status" id="sel_status" class="form-control">
                                        <option value="0">请选择</option>
                                        <option value="1">显示</option>
                                        <option value="2">隐藏</option>
                                    </select>
                                </td>
                                <td style="width:100px;"></td>
                                <td>
                                    <a href="javascript:;" class="btn btn-default" style="width:100px;">查询</a> &nbsp;&nbsp;&nbsp;
                                    <a href="/User/FeedBack/" data-ajax-update="#main_content" data-ajax-mode="replace" data-ajax="true" style="vertical-align:bottom;">重置</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                        <h2 style="font-weight:900;" class="pull-left">反馈列表管理</h2>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="center" style="width:60px;">序号</th>
                                        <th class="center">标题</th>
                                        <th class="center">来源ip</th>
                                        <th class="center">来源地区</th>
                                        <th class="center">状态</th>
                                        <th class="center">反馈日期</th>
                                        <th class="center">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.FeedBacks == null || ViewBag.FeedBacks.Count <= 0)
                                    {
                                        <tr style="text-align:center;">
                                            <td colspan="6">
                                                <font color="red">没有找到用户的反馈数据</font>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (QIQU.Entity.Extend.FeedBackModels m in ViewBag.FeedBacks)
                                        {
                                            <tr style="text-align:center;vertical-align:middle;" onmouseover=" this.style.background = '#F4F7FA';" onmouseout="this.style.background = '';">
                                                <td>@m.Id</td>
                                                <td>@m.Title</td>
                                                <td>@m.FromIp</td>
                                                <td>@m.FromArea</td>
                                                <td>@(new HtmlString(QIQU.Entity.EnumDescription.Get(m.status)))</td>
                                                <td>@m.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                <td>
                                                    <a href="/User/FBDetails/?id=@m.Id" data-ajax-update="#main_content" data-ajax-mode="replace" data-ajax="true">查看</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="page">
                                @(new HtmlString(ViewBag.PageHtml))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

