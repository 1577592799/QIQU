@{
    Layout = null;
}
@using UMould.TLM.Manage.Model

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="javascript:;">首页</a></li>
                    <li class="active"><span>数据信息列表</span></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                        <h2 style="font-weight:900;" class="pull-left">数据信息管理</h2>
                        <span style="float:right;"><a href="/Member/ftp/" data-ajax-update="#main_content" data-ajax-mode="replace" data-ajax="true">更新数据表</a></span>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="center" style="width:250px;">序号</th>
                                        <th class="center">域名</th>
                                        <th class="center">数据库名称</th>
                                        <th class="center">数据源</th>
                                        <th class="center">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.DataList == null || ViewBag.DataList.Count <= 0)
                                    {
                                        <tr style="text-align:center;">
                                            <td colspan="6">
                                                <font color="red">没有找到数据信息</font>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (DataInformationExt m in ViewBag.DataList)
                                        {
                                            <tr style="height:40px; text-align:center;vertical-align:middle;" onmouseover=" this.style.background = '#F4F7FA';" onmouseout="this.style.background = '';">
                                                <td>@m.Id</td>
                                                <td>@m.Domain</td>
                                                <td>@m.DBName</td>
                                                <td>@m.DBSource</td>
                                                <td>
                                                    <a href="/Member/Sellmember/?pid=@m.Id" data-ajax-update="#main_content" data-ajax-mode="replace" data-ajax="true">查看</a>
                                                    <a href="/Member/Replace/?rid=@m.Id" data-ajax-update="#main_content" data-ajax-mode="replace" data-ajax="true">单条更新</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="page">
                                @(new HtmlString(ViewBag.PageHtml))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>