@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="lincowebapp-wrapper">

    <div class="lincoapp-tab skin-fixed" id="tab-switch-wrap">
        <ul>
            <li class="main selected" data-tab="mainNews"><span> 最 新 </span></li>
            <li class="recom " data-tab="recomNews"><span>已发布</span></li>
            <li class="video  inew" data-tab="videoNews"><span>回收站</span></li>
        </ul>
    </div>

    <div class="lincoapp-home-content main-tab-content">
        <section class="lincoapp-home-section">
            <div class="lincoapp-hotwords2 show-viewlog-tag" style="display: block;">
                <div class="lincoapp-home-title">
                    <h2 class="tit"><span><a href="javascript:;">信息审核</a></span></h2>
                </div>
                <input type="hidden" id="hidden_count" value="@ViewBag.RecordCount" />
                @if (ViewBag.AuditList == null)
                {
                    <a class="lincoapp-home-more2">没有最新数据了</a>
                }
                else
                {
                    <div id="div_audit_list">
                        <ul class="lincoapp-graphic-list2 ">
                            @foreach (var item in ViewBag.AuditList)
                            {
                                <li>
                                    <a href="/Auditing/Details/@item.Id" class="a-lk">
                                        <div class="detail">
                                            <strong class="tit">@item.Title</strong>
                                            <div class="info"><span class="resource">@item.Author</span><span class="resource">@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</span></div>
                                        </div>
                                        <span class="u-img"><img src="@item.ImgUrl" class="img"></span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <a href="javascript:;" class="lincoapp-home-more2" id="a_next">查看下一页</a>
                }
            </div>
        </section>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/Page/aud_index.js"></script>